@page
@model RazorPages.Web.IndexModel
@{
    ViewData["Title"] = "Index";
    ViewData["showButton"] = true;
}

<style>
    .btn{
        width:75px;
    }
</style>
<p class="mt-3 mb-3">
    <a class="nav-link text-dark" asp-area="" asp-page="/Employees/Edit">Add</a>
</p>
<h1>Employees</h1>

@await Component.InvokeAsync("HeadCount", null)

<div class="card-deck">
    @foreach (var employee in Model.Employees)
    {
        <partial name="_DisplayEmployeePartial" model="employee" view-data="ViewData"/>
    }
</div>